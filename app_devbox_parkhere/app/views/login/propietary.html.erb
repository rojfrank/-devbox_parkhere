<% content_for :"head" do %>
<title>Iniciar sesion de propietario</title>
<% end %>

<div class="container">
    <h2 class="text-center">Iniciar sesión</h2>
    <div>


    </div>

    <div class="panel panel-default col-sm-offset-3 col-sm-6">

        <%= form_tag '/login/propietary' , :class => "form-horizontal", :style => "padding: 40px 0px 40px" do  %>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Correo:</label>
            <div class="col-sm-8">
                <input type="email" class="form-control" id="email" placeholder="Ingrese correo">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Contraseña:</label>
            <div class="col-sm-8">          
                <input type="password" class="form-control" id="password" placeholder="Ingrese contraseña">
            </div>
        </div>

        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-4">
                <div class="checkbox">
                    <label><input type="checkbox"> Recordarme</label>
                </div>
            </div>
        </div>

        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-8">
                <a href="/parks/find/rents">
                    <button type="submit" class="btn btn-info btn-block">Ingresar</button>
                </a>
            </div>
        </div>


        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-5">
                <a href="/register/propietary">
                    <button type="submit" class="btn btn-success btn-block">Registrar
                    </button>
                </a>
            </div>
        </div>

        <% end %>
    </div>
</div>
