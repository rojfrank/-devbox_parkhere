<% content_for :"head" do %>
<title>Registro de Usuario</title>
<% end %>

<div class="container">
    <h2 class="text-center">Registro de Usuario</h2>

    <div class="col-sm-offset-2 col-sm-6">

        <div class="panel-body">

            <form class="form-horizontal">

                <div class="form-group">
                    <label class="control-label col-sm-4" for="name">Nombres</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="name" placeholder="Ingrese nombres">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" >Apellido Paterno</label>
                    <div class="col-sm-8">          
                        <input type="text" class="form-control" id="apelpat" placeholder="Ingrese apellido paterno">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" >Apellido Materno</label>
                    <div class="col-sm-8">          
                        <input type="text" class="form-control" id="apelMat" placeholder="Ingrese apellido materno">
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-4" >Fecha de Nacimiento</label>
                    <div class="col-sm-8">          
                        <input type="date" placeholder="Date Of Birth" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="phone">Celular</label>
                    <div class="col-sm-8">          
                        <input type="tel" class="form-control" id="phone" placeholder="Ingrese celular">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4">Sexo</label>

                    <div class="col-sm-6">
                        <div class="radio">
                            <label><input type="radio" name="optradio">Masculino</label>
                        </div>

                        <div class="radio">
                            <label><input type="radio" name="optradio">Femenino</label>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4"> </label>
                    <div class="col-sm-8">
                        <select type="text" placeholder="Document" class="form-control">
                            <option>Tipo documento de identidad</option>
                            <option value="dni">DNI</option>
                            <option value="carnet">Carnet de extranjeria</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" for="email">Correo</label>
                    <div class="col-sm-8">          
                        <input type="email" class="form-control" id="email" placeholder="Ingrese correo">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" >Confirmación de correo</label>
                    <div class="col-sm-8">          
                        <input type="email" class="form-control"  id="remail" placeholder="Repita correo">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4" >Contraseña</label>
                    <div class="col-sm-8">          
                        <input type="password" class="form-control" id="contraseña" placeholder="Ingrese contraseña">
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-4">Confirmación de contraseña</label>
                    <div class="col-sm-8">          
                        <input type="password" class="form-control" id="rcontraseña" placeholder="Repita contraseña">
                    </div>
                </div>

                <div class="form-group">        
                    <div class="col-sm-offset-1 col-sm-6">
                        <div class="checkbox">
                            <label><input type="checkbox"> Acepta los </label><a href="#"> terminos y condiciones </a>
                        </div>
                    </div>

                    <div class="col-sm-offset-8 ">
                        <div class="checkbox">
                            <label><input type="checkbox"> No soy robot</label>
                        </div>
                    </div>

                    <div class="form-group"> 
                        <div style="margin-top:10px" > </div>       
                        <div class="col-sm-offset-4 col-sm-8">

                            <a href=<%= login_user_path %>>
                                <button type="submit" class="btn btn-success btn-block">Registrar</button>
                            </a>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>










