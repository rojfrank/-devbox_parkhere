<% content_for :"head" do %>
<title>Calificación de estacionamiento</title>
<% end %>



<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">




<div class="container">
    <h1 class="text-left">Calificación de estacionamiento</h1>
    <h3 class="text-left">Estacionamiento en Miraflores</h3>
    <h4 class="text-left">Dirección: Av. Benavides 123 - Lima, Lima, Miraflores</h4>


   <div class="panel-body col-sm-offset-1  col-sm-6">


     <form class="form-horizontal">

        <div class="stars ">
            <input class="star star-5" id="star-5" type="radio" name="star"/>
            <label class="star star-5" for="star-5"></label>
            <input class="star star-4" id="star-4" type="radio" name="star"/>
            <label class="star star-4" for="star-4"></label>
            <input class="star star-3" id="star-3" type="radio" name="star"/>
            <label class="star star-3" for="star-3"></label>
            <input class="star star-2" id="star-2" type="radio" name="star"/>
            <label class="star star-2" for="star-2"></label>
            <input class="star star-1" id="star-1" type="radio" name="star"/>
            <label class="star star-1" for="star-1"></label>
        </div>

                
        </form>
    </div>
</div>




<p id="notice"><%= notice %></p>
<body>
<div class="container">
  <h2>Comentarios</h2>

<table class="table">

  <thead>
    <tr>
      <th> Usuario </th>
      <th> Estacionamiento </th>
      <th> Comentario </th>
      <th> Calificacion </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.usuario %></td>
        <td><%= comentario.estacionamiento %></td>
        <td><%= comentario.comentario %></td>
        <td><%= comentario.calificacion %></td>
        <td><%= link_to ' Ver ', comentario %></td>
        <td><%= link_to ' Editar ', edit_comentario_path(comentario) %></td>
        <td><%= link_to ' Eliminar ', comentario, method: :delete, data: { confirm: 'desea eliminar el comentario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>

<br>

<center><%= link_to 'Nuevo Comentario', new_comentario_path %></center>
